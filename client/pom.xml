<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.growcontrol</groupId>
    <artifactId>gcServer</artifactId>
    <packaging>jar</packaging>
    <version>3.0.10-SNAPSHOT</version>
    <name>Grow Control Server</name>
    <url>http://growcontrol.com</url>
    <build>
        <sourceDirectory>src</sourceDirectory>
        <resources>
            <resource>
                <directory>resources</directory>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>com.growcontrol.gcServer.Main</mainClass>
                        </manifest>
                    </archive>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <repositories>
        <repository>
            <id>gclibs</id>
            <name>gc libraries</name>
            <layout>default</layout>
            <url>file://${project.basedir}/lib/</url>
        </repository>
    </repositories>
    <organization>
    	<name>PoiXson</name>
    	<url>http://poixson.com</url>
    </organization>
    <scm>
    	<url>https://github.com/lorenzop/GrowControl</url>
    	<connection>scm:git:https://github.com/lorenzop/GrowControl.git</connection>
    	<developerConnection>scm:git:https://github.com/lorenzop/GrowControl.git</developerConnection>
    </scm>
    <issueManagement>
    	<url>https://github.com/lorenzop/GrowControl/issues</url>
    	<system>github</system>
    </issueManagement>
    <ciManagement>
    	<url>ci.poixson.com</url>
    	<system>pxnci</system>
    </ciManagement>
</project>
